<ContentPage
    x:Class="XF_Prism_MarvelCards.Views.HeroCards"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cards="clr-namespace:PanCardView;assembly=PanCardView"
    xmlns:views="clr-namespace:XF_Prism_MarvelCards.Views"
    Title="{Binding Title}">
    <Grid>
        <cards:CardsView
            x:Name="MainCardView"
            IsCyclical="True"
            ItemsSource="{Binding Heros}">
            <cards:CardsView.ItemTemplate>
                <DataTemplate>
                    <views:HeroCard />
                </DataTemplate>
            </cards:CardsView.ItemTemplate>
        </cards:CardsView>

        <Label
            x:Name="MoviesHeader"
            Margin="{OnPlatform iOS=30,
                                Default=10}"
            HorizontalOptions="Center"
            Style="{StaticResource TitleHeader}"
            Text="movies"
            VerticalOptions="Start" />
        <Image
            x:Name="BackArrow"
            Margin="{OnPlatform iOS='40,33,0,0',
                                Default='40,15,0,0'}"
            HorizontalOptions="Start"
            Source="back_arrow"
            VerticalOptions="Start">
            <!--<Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Image.GestureRecognizers>-->
        </Image>
    </Grid>
</ContentPage>